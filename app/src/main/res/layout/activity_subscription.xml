<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mViewModel"
            type="com.safeguardFamily.diabezone.viewModel.SubscriptionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="15dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_back_blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/xLarge.MontserratBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:text="Diabezone Programs" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="New Age Diabetes Treatment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_green_border"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#41CA99"
                            android:gravity="center"
                            android:padding="15dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv1"
                                style="@style/Large.White.MontserratBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/ivB1"
                                android:text="Digital Health Vault" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.White"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv1"
                                android:layout_toStartOf="@id/ivB1"
                                android:text="Dedicated Health Coach" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivB1"
                                style="@style/Small.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_banner_1"
                                android:text="Dedicated Health Coach" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="15dp"
                            android:lineSpacingExtra="15dp"
                            android:text="\u2727  Personalized Digital Health Vault, see example Health Vault of Mr Mani" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="15dp"
                            android:text="\u2727  Dedicated Health Coach" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="\u2727  Emergency Medical Assistance  " />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_purple_border"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#7C6EE3"
                            android:gravity="center"
                            android:padding="15dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv2"
                                style="@style/Large.White.MontserratBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/ivB2"
                                android:text="Consolidated Prescription" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.White"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv2"
                                android:layout_toStartOf="@id/ivB2"
                                android:text="Single Medicine Prescription" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivB2"
                                style="@style/Small.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_banner_2"
                                android:text="Dedicated Health Coach" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="20dp"
                            android:text="Our Doctors will also create a single master presecription once you enrol" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Medium.MontserratBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Choose A DiabeZone Program" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPrograms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>