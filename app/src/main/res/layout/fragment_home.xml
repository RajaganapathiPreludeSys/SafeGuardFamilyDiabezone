<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mViewModel"
            type="com.safeguardFamily.diabezone.viewModel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvProfileImages"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivProfileImage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@color/bgGrey"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/cvProfileImages"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Medium.MontserratBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/welcome" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvName"
                                style="@style/xLarge.Blue.MontserratBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:minLines="2" />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/vpNotification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp" />

                        <LinearLayout
                            android:id="@+id/llNotificationIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/xLarge.Blue.MontserratSemi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/daily_diabetes_log" />

                    <ImageView
                        android:id="@+id/ivOpenLogs"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_circle_right" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/Medium.Grey.MontserratSemi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date" />

                                <RelativeLayout
                                    android:id="@+id/tlDateContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/bg_blue_border">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvDate"
                                        style="@style/Medium.Black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@+id/ivDate"
                                        android:ellipsize="end"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"
                                        android:text="@string/select_date" />

                                    <ImageView
                                        android:id="@+id/ivDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:contentDescription="@string/app_name"
                                        android:padding="9dp"
                                        android:src="@drawable/ic_down_arrow_blue" />

                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/Medium.Grey.MontserratSemi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/blood_sugar" />

                                <RelativeLayout
                                    android:id="@+id/tlBloodSugarContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/bg_blue_border">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/etBloodSugar"
                                        style="@style/Medium.Black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@+id/ivBloodSugar"
                                        android:background="@null"
                                        android:gravity="center"
                                        android:hint="0"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivBloodSugar"
                                        style="@style/Medium.Grey.MontserratSemi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:text="mg/dL" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/Medium.Grey.MontserratSemi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time" />

                                <RelativeLayout
                                    android:id="@+id/tlTimeContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/bg_blue_border">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvTime"
                                        style="@style/Medium.Black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@+id/ivTime"
                                        android:gravity="center"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"
                                        android:text="@string/select_time" />

                                    <ImageView
                                        android:id="@+id/ivTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:contentDescription="@string/app_name"
                                        android:padding="9dp"
                                        android:src="@drawable/ic_down_arrow_blue" />

                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/Medium.Grey.MontserratSemi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/type" />

                                <RelativeLayout
                                    android:id="@+id/rlTypeContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/bg_blue_border">

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/spType"
                                        style="@style/Large"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@id/ivTypePicker"
                                        android:background="@null"
                                        android:gravity="center"
                                        android:text="@string/type" />

                                    <ImageView
                                        android:id="@+id/ivTypePicker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:contentDescription="@string/app_name"
                                        android:padding="9dp"
                                        android:src="@drawable/ic_down_arrow_blue" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btAddLog"
                            style="@style/Medium.White"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_royal_blue_round"
                            android:gravity="center"
                            android:text="@string/add_to_logs"
                            android:textAllCaps="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGraphTitle"
                        style="@style/Large.Blue.MontserratSemi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Sugar " />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlGraphContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/xSmall.Grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mg/dL" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvResetZoom"
                        style="@style/xSmall.MontserratBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/reset_zoom" />

                    <com.github.mikephil.charting.charts.CombinedChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_below="@id/tvResetZoom"
                        android:layout_margin="2dp"
                        android:padding="2dp" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChartPlaceholder"
                    style="@style/Large.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="No data available" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        style="@style/Small.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/blue"
                        android:text="Fasting Blood Sugar" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        style="@style/Small.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/blue"
                        android:text="After meal" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        style="@style/Small.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/blue"
                        android:text="Random" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAvg"
                                style="@style/xLarge.Blue.MontserratSemi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvMin"
                                style="@style/xLarge.Blue.MontserratSemi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Min" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvMax"
                                style="@style/xLarge.Blue.MontserratSemi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Max" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTaget"
                                style="@style/xLarge.Blue.MontserratSemi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120-120" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Small.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Small.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Incidents:" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_red_border"
                            android:orientation="vertical"
                            android:padding="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_blue_round"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hyper - " />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvHyper"
                                        style="@style/Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/ic_red_up_arrow" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hypo - " />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvHypo"
                                        style="@style/Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/ic_red_down_arrow" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#E7565A"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_red_banner" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_book_appointment" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minLines="3"
                            android:text="Book Doctor Appointment" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_consolidated_prescription" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minLines="3"
                            android:text="Consolidated Prescription" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_health_vault" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minLines="3"
                            android:text="Health Vault" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
