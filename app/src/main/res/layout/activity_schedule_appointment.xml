<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mViewModel"
            type="com.safeguardFamily.diabezone.viewModel.ScheduleAppointmentViewModel" />

        <variable
            name="provider"
            type="com.safeguardFamily.diabezone.model.response.Provider" />

        <variable
            name="date"
            type="String" />

        <variable
            name="time"
            type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ScheduleAppointmentActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/icHeader"
                layout="@layout/include_header" />

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icHeader" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="40dp"
                android:visibility="gone"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_round"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlDiabetes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvProfileImages"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_profile_thumb"
                            app:civ_border_color="@color/blue"
                            app:civ_border_width="1dp"
                            app:loadImage="@{provider.pic}" />

                        <LinearLayout
                            android:id="@+id/llContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/cvProfileImages"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvName"
                                style="@style/Medium.MontserratBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{provider.name}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvProfession"
                                style="@style/Medium.Blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{provider.speciality}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvEducation"
                                style="@style/Small.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{provider.education}" />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blueLine" />

                    <LinearLayout
                        android:id="@+id/llDateTimeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDate"
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_appointment"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/blue"
                            android:text="@{date}" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTime"
                            style="@style/Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_schedule"
                            android:drawablePadding="5dp"
                            android:text="@{time}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btJoinOnline"
                            style="@style/Large.White"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_royal_blue_round"
                            android:gravity="center"
                            android:text="@string/join_online"
                            android:textAllCaps="false" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btReschedule"
                            style="@style/Large.Blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_blue_border"
                            android:gravity="center"
                            android:text="@string/reschedule"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <include
            android:id="@+id/icBottomSheetTime"
            layout="@layout/bottom_dialog_time" />

        <include
            android:id="@+id/icBottomSheetConfirm"
            layout="@layout/bottom_dialog_confirm" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>